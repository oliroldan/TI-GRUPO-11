<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<% if (locals.user != undefined) { %>
			<%- include('./partials/headerLogueado') %>
		 <% } else { %>
			<%- include('./partials/header') %>
		<% } %>
		<!-- /Header -->

			<!-- Datos del usuario -->
			<section class="info-usuario container products-wrapper">
				<div class="row">
					<div class="img-container offset-3 col-2">
						<img src="/fotosPerfil/<%= usuario.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
					</div>

					<div class="data-container col-6">
						<div class="d-flex align-items-center ">
							<h2 class="main-title">
								    <%= usuario.nombre %>  
									<a href="/users/profile-edit/<%=usuario.id%>">
										<i class="fas fa-cog"></i>
									</a>
							</h2>
							<a class="btn mt-3 ml-4" href="">SEGUIR</a>
						</div>
						<div>
							<ul class="">
								<%= usuario.mail %>
								<br>
								<br>
								<li>✦ Cantidad de productos cargados por <%= usuario.nombre %>: <%= productos.length %></li>
								<br>
								<li>✦ 200 seguidores</li>
								<br>
								<li>✦ 300 comentarios</li>
								<br>
							</ul>
						</div>
						<ul>
							<li>
								<% if (locals.user != undefined) { %>
									<% if (locals.user.id == usuario.id) { %>
										<a href="/users/profile-edit/<%=usuario.id%>"> Edita tu perfil <i class="fas fa-sign-in-alt"></i></a>
									<% } else {%>
										<p>No podes editar este perfil</p>
										<% } %>
									
								<% } %>
							</li>
						</ul>
					</div>
				</div>
			</section>
			<!-- /Datos del usuario -->

			<!-- Mis productos -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Mis productos</h2>
					</div>
					<!-- Show mis productos -->
					<% for( let i=0; i < productos.length ; i++ ) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product/detalle/<%=productos[i].id%>">
									<figure class="product-box_image">
										<img src="/fotosProductos/<%= productos[i].fotoProducto %>" alt="">
									</figure>
									<article class="product-box_data">
										<h2>
											<%= productos[i].nombre %>
										</h2>
										<p>
											<%= productos[i].descripcion%>
										</p>
										<p>
											Comentarios: <%= productos[i].comentario%>
										</p>
									</article>
								</a>
							</section>
						</div>
						<% } %>
				</div>
			</div>
			</div>
			<!-- /Mis productos -->

			<!-- footer -->
			<%- include('./partials/footer') %>
			<!-- /footer -->
	</body>

</html>