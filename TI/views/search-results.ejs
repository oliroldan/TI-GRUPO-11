<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<% if (locals.user != undefined) { %>
			<%- include('./partials/headerLogueado') %>
		 <% } else { %>
			<%- include('./partials/header') %>
		<% } %>
		<!-- /Header -->

			<!-- Novedades -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Resultados de b√∫squeda</h2>

					</div>
					<!-- Show the "ultimos" products -->
					<h2 class="col-12"></h2>
						<% if (listado.length == 0) { %>
							<h2>NO HAY RESULTADO</h2>
						<% } else { %>
							<% for( let i=0; i < listado.length; i++ ) { %>
								<div class="col-12 col-sm-6 col-lg-3">
									<section class="product-box">
										<a href="/product/detalle/<%= listado[i].id %>">
											<figure class="product-box_image">
												<img src="<%= listado[i].fotoProducto %>">
											</figure>
											<article class="product-box_data">
												<h2>
													<%=listado[i].nombre %>
												</h2>
												<p>
													<%= listado[i].descripcion %>
												</p> 
												<p>
													Agregado por: <%=listado[i].usuario.nombre %>
												</p>
											</article>
										</a>
									</section>
								</div>
		
								<% } %>
							<% } %> 

					<!-- footer -->
					<%- include('./partials/footer') %>
					<!-- /footer -->
	</body>

</html>