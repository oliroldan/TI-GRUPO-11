<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

		<!-- Banner -->
		<div class="banner">
			<img src="images/bannerBeauty.png" alt="Banner">
		</div>
		<!-- /Banner -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Novedades</h2>
				</div>
				<!-- Show the "ultimos" products -->
				<% for( let i = 0; i < 4; i++ ) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product">
								<figure class="product-box_image">
									<img src="<%= productos[i].imagen %>" >
								</figure>
								<article class="product-box_data">
									<h2> <%=productos[i].nombreProducto  %></h2>
									<p> <%= productos[i].descripcion %> </p>
									<p> <%= productos.comentarios%> </p>
								</article>
							</a>
						</section>
					</div>
				
				<% } %>

				
			</div>
		</div>
		<!-- /Novedades -->

		<!-- Más comentados -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Más comentados</h2>
				</div>
				<!-- Show the "ultimos" products -->
				<% for( let i = 4; i < 8; i++ ) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product">
								<figure class="product-box_image">
									<img src="<%= productos[i].imagen %>" >
								</figure>
								<article class="product-box_data">
									<h2> <%=productos[i].nombreProducto %></h2>
									<p> <%= productos[i].descripcion %> </p>
									<p> <%= productos.comentarios %> </p>
								</article>
							</a>
						</section>
					</div>
				
				<% } %>

			</div>
		</div>
		<!-- /Más comentados -->


		<!-- footer -->
		<%- include('./partials/footer') %>
		<!-- /footer -->
</body>

</html>